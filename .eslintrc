{
  "extends": [
    "airbnb",
    "airbnb/hooks"
  ],
  "settings": {
    "import/resolver": {
      "alias": {
        "extensions": [".js", ".jsx"],
        "map": [
          ["~", "./"]
        ]
      }
    }
  },
  "rules": {
    "import/prefer-default-export": "off",
    "react/jsx-props-no-spreading": "off",
    "jsx-a11y/label-has-associated-control": ["error", {
      "labelComponents": [],
      "labelAttributes": [],
      "controlComponents": ["Field"],
      "assert": "both",
      "depth": 25
    }]
  }
}
